# common aliases

alias clear='echo -e "\e[2J"'
alias ls='ls --color=always'
alias ll='ls -AFlh --group-directories-first'
alias lf='ll -rt'
alias l='lf'
alias nl="nl -ba"

alias p='pushd'
alias o='popd'
alias d='dirs'
alias less='less -R'
alias t='task'


alias follow=". ~/bin/follow"

alias fim='vim -p $(fzf -i -m)'
alias irssi=TERM='screen-256color irssi'
alias pyg='pygmentize -f 256 -O style=monokai'
alias tm='tmux attach'
alias vdb="vim -c 'python debugger.run()'"

alias gtab="google-chrome --new-tab"
# vim: set ft=sh :
